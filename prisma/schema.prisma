generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  deletedAt DateTime?
  reservations Reservation[]
  type      UserType   @default(CUSTOMER)

  @@index([deletedAt])
}

enum UserType {
  ADMIN
  CUSTOMER
}

model Service {
  id        Int       @id @default(autoincrement())
  name      String
  price     Decimal?  @db.Decimal(10,2)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  reservations Reservation[]
}

model Reservation {
  id         Int       @id @default(autoincrement())
  startTime  DateTime  // inicio del turno
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  service    Service   @relation(fields: [serviceId], references: [id])
  serviceId  Int
  status     ReservationStatus @default(PENDING)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model BusinessConfig { // Configuracion del negocio
  id              Int       @id @default(autoincrement())
  slotInterval    Int       // intevalo de tiempo en minutos
  openingHour     String    // hora de apertura o inicio de turnos
  closingHour     String    // hora de cierre o fin de turnos
  disabledDays    Int[]
  disabledDates   DisabledDate[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model DisabledDate { // Dias especificos deshabilidatos 
  id       Int       @id @default(autoincrement())
  date     DateTime  @unique
  config   BusinessConfig @relation(fields: [configId], references: [id])
  configId Int
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
}